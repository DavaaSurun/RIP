{% extends 'base.html.twig' %}

{% block title %}Title{% endblock %}

{% block body %}
    <h1>Title</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ title.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ title.title }}</td>
            </tr>
            <tr>
                <th>Start</th>
                <td>{{ title.start ? title.start|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>End</th>
                <td>{{ title.end ? title.end|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ title.description }}</td>
            </tr>
            <tr>
                <th>All_day</th>
                <td>{{ title.allDay ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Back_color</th>
                <td>{{ title.backColor }}</td>
            </tr>
            <tr>
                <th>Border_color</th>
                <td>{{ title.borderColor }}</td>
            </tr>
            <tr>
                <th>Text_color</th>
                <td>{{ title.textColor }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('title_index') }}">back to list</a>

    <a href="{{ path('title_edit', {'id': title.id}) }}">edit</a>

    {{ include('title/_delete_form.html.twig') }}
{% endblock %}
