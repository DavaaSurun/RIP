{% extends 'base.html.twig' %}

{% block title %}Title index{% endblock %}

{% block body %}
    <h1>Title index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Start</th>
                <th>End</th>
                <th>Description</th>
                <th>All_day</th>
                <th>Back_color</th>
                <th>Border_color</th>
                <th>Text_color</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for title in titles %}
            <tr>
                <td>{{ title.id }}</td>
                <td>{{ title.title }}</td>
                <td>{{ title.start ? title.start|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ title.end ? title.end|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ title.description }}</td>
                <td>{{ title.allDay ? 'Yes' : 'No' }}</td>
                <td>{{ title.backColor }}</td>
                <td>{{ title.borderColor }}</td>
                <td>{{ title.textColor }}</td>
                <td>
                    <a href="{{ path('title_show', {'id': title.id}) }}">show</a>
                    <a href="{{ path('title_edit', {'id': title.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('title_new') }}">Create new</a>
{% endblock %}
